{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "mocha",
        "node"
    ],

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },

    "settings": {
        "node": {
            "tryExtensions": [
                ".js",
                ".json",
                ".ts"
            ]
        }
    },

    "extends": "eslint:recommended",
    "rules": {
        "semi": ["error", "always"],
        "prefer-const": "error",
        "no-var": "error"
    }
}
